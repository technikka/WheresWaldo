<%= content_for :javascript do %>
  <%= javascript_import_module_tag "exhibits" %>
<% end %>

<nav>
  <%= link_to "Main Menu", exhibits_path %>
</nav>

<div class="exhibit-content">
  <div class="left-panel">
    <div id="image-size">
      <%= form_with do |f| %>
        <h2>Select Image Size:</h2>
        <p>* changing size restarts the game</p>
        <div>
          <%= f.radio_button :size, "1" %>
          <%= f.label :image_size, "800x500 (small)" %>
        </div>
        <div>
          <%= f.radio_button :size, "2", checked: true %>
          <%= f.label :image_size, "1000x630 (medium)" %>
        </div>
        <div>
          <%= f.radio_button :size, "3" %>
          <%= f.label :image_size, "1200x750 (large)" %>
        </div>
      <% end %>
    </div>

    <div class="characters">
      <div class="waldo">
        <%= image_tag("waldo.png") %>
        <i class="fa-regular fa-circle-check fa-2xl"></i>
      </div>
      <div class="wilma">
        <%= image_tag("wilma.png") %>
        <i class="fa-regular fa-circle-check fa-2xl"></i>
      </div>
      <div class="wizard">
        <%= image_tag("wizard_whitebeard.png") %>
        <i class="fa-regular fa-circle-check fa-2xl"></i>
      </div>
      <div class="odlaw">
        <%= image_tag("odlaw.png") %>
        <i class="fa-regular fa-circle-check fa-2xl"></i>
      </div>
    </div>

    <div id="timer">
      <div class="minutes">00</div>
      <div>:</div>
      <div class="seconds">00</div>
    </div>
  </div>
  
  <div class="right-panel">
    <h1><%= @exhibit.title %></h1>
    
    <div id="image-grid-container">
      <div id="grid"></div>
      <%= image_tag(@exhibit.image_path) %>
    </div>
  </div>
</div>
